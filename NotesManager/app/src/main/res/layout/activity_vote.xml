<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VoteActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="408dp"
        android:layout_height="270dp"
        android:layout_marginTop="131dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/button1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="20dp"
                android:src="@mipmap/a1"
                android:text="ImageButton"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="530dp" />

            <ImageButton
                android:id="@+id/button2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:src="@mipmap/a2"
                android:text="ImageButton"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="530dp" />

            <ImageButton
                android:id="@+id/button3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/a3"
                android:text="ImageButton"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="530dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <ImageButton
                android:id="@+id/button5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="20dp"
                android:src="@mipmap/a5"
                android:text="ImageButton"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="530dp" />

            <ImageButton
                android:id="@+id/button8"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:src="@mipmap/a8"
                android:text="ImageButton"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="530dp" />

            <ImageButton
                android:id="@+id/button13"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/a13"
                android:text="ImageButton"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="530dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <ImageButton
                android:id="@+id/button21"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="20dp"
                android:src="@mipmap/a21"
                android:text="ImageButton"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="530dp" />

            <ImageButton
                android:id="@+id/button34"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:src="@mipmap/a34"
                android:text="ImageButton"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="530dp" />

            <ImageButton
                android:id="@+id/buttonCoffe"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/coffe"
                android:text="ImageButton"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="530dp" />

        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/voteButon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="56dp"
        android:text="Vote"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temaButton" />

    <EditText
        android:id="@+id/temaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>